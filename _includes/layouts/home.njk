---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# The Home page uses this template–it extends the base template #}

<div class="wrapper home">
  <div class="content">
    {{ content | safe }}
    
    {# After the the content defined in index.md, list the blog posts in the collection #}
    <ul>
      {%- for post in collections.posts -%}
        <li{% if page.url == post.url %} aria-current="page"{% endif %} data-geo="{{post.data.geo}}" data-category="{{post.data.category}}"><a href='{{ post.url }}'>{{ post.data.title }}</a> – {{ post.data.page.date | htmlDateString }}</li>
      {%- endfor -%}
    </ul>
    <p class="info">
      You can access a feed of the posts at <a href="/feed.json"><code>feed.json</code></a>
    </p>
  </div>
</div>
