---
layout: layouts/base.njk
templateClass: tmpl-home
---

{# This is the template for individual blog posts‚Äìit builds the front matter properties into the page #}

<div class="wrapper post">
  <div class="content">
  <div>
    {# The post front matter includes the title property #}
    <h2 class='postTitle'>{{title}}</h2>

    <div class="meta">
    <span class="category">
      {{category}}
    </span>
    <span class="geo">
      <a target="_blank" href="https://maps.google.com/?q={{geo}}">directions</a> üó∫Ô∏è
    </span>
    </div>
    
    <img src="{{ image }}" alt="{{imgalt}}"/>
    <p class="date">
      {{ date | htmlDateString }}
    </p>
    
    {# Content from the body of the post markdown appears here #}
    {{ content | safe }}
    <div class="controls">
    {# The previous and next post data is added in .eleventy.js #}
    {% if prevPost.url %}
      <p>
        <strong>Previous post</strong>: 
        <a class="previous" href="{{ prevPost.url }}">{{ prevPost.data.title }}</a>
      </p>
    {% endif %}
    {% if nextPost.url %}
      <p>
        <strong>Next post</strong>: 
        <a class="next" href="{{ nextPost.url }}">{{ nextPost.data.title }}</a>
      </p>
    {% endif %}
    </div>
  </div>
  </div>
</div>